{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "BatchIngestor": {
    "DefaultBatchSize": 1000,
    "DefaultMaxDegreeOfParallelism": 4,
    "EnableCpuThrottling": true,
    "MaxCpuPercent": 80.0,
    "ThrottleDelayMs": 100,
    "EnablePerformanceMetrics": true,
    "RetryPolicy": {
      "MaxRetries": 3,
      "InitialDelayMs": 100,
      "MaxDelayMs": 5000,
      "UseExponentialBackoff": true,
      "UseJitter": true
    },
    "Connections": [
      {
        "Name": "SqlServer",
        "Dialect": "SqlServer",
        "ConnectionString": "Server=localhost;Database=BatchIngestorDemo;Trusted_Connection=True;TrustServerCertificate=True;",
        "Enabled": true
      },
      {
        "Name": "PostgreSql",
        "Dialect": "PostgreSql",
        "ConnectionString": "Host=localhost;Database=batch_ingestor_demo;Username=postgres;Password=postgres;",
        "Enabled": true
      },
      {
        "Name": "AuroraPostgreSql",
        "Dialect": "AuroraPostgreSql",
        "ConnectionString": "Host=mydb.cluster-xyz.us-east-1.rds.amazonaws.com;Database=mydb;Username=admin;Password=secret;",
        "Enabled": false
      },
      {
        "Name": "AuroraMySql",
        "Dialect": "AuroraMySql",
        "ConnectionString": "Server=mydb.cluster-xyz.us-east-1.rds.amazonaws.com;Database=mydb;User=admin;Password=secret;",
        "Enabled": false
      },
      {
        "Name": "AzureSql",
        "Dialect": "AzureSql",
        "ConnectionString": "Server=tcp:myserver.database.windows.net,1433;Database=mydb;User ID=admin;Password=secret;",
        "Enabled": false
      }
    ]
  }
}
